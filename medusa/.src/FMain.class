Public Function extraeNombre(nombre As String) As String
  
  Dim letra As String
  Dim a As Integer
  Dim nombreextraido As String
  
  nombre = Replace$(nombre, "file://", "")
  
  For a = 1 To Len(nombre)
    letra = Mid$(nombre, a, 1)
    If letra = "\r" Then
      Return nombreextraido
    Else
      nombreextraido &= letra 
    Endif
  Next
  
End

